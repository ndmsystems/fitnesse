<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} %highlight{${LOG_LEVEL_PATTERN:-%6p}} [%12.12t] %style{%-25.25C{1.}}{cyan} : %m%n%throwable"/>
        </Console>
	</Appenders>
	<Loggers>
		<Root level="ALL">
			<AppenderRef ref="console"/>
		</Root>
	</Loggers>
</Configuration>
